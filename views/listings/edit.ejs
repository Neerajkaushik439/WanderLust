<% layout('layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Edit the listing</h3>
    <form action="/listings/<%= list._id %>?_method=PUT" method="POST"  novalidate class="needs-validation">
        <div>
            <label for="title" class="form-label">Title </label>
            <input type="text" name="title" id="title"  class="form-control" value=<%= list.title %> required>
            <div id="validationServer04Feedback" class="invalid-feedback">Please enter a title</div>

            </div>
            <br><br>
        <div>
    
            <label for="description" class="form-label">Description </label>
            <textarea type="text" name="description" id="description" class="form-control" required ><%= list.description %></textarea>
            <div id="validationServer04Feedback" class="invalid-feedback">Please enter a short Description</div>

            <br><br>
        </div>
        <div class="row">
        <div class="col-md-4">
    
            <label for="price" class="form-label">Price</label>
            <input type="number" name="price" id="price" class="form-control" value=<%= list.price %> required>
            <div id="validationServer04Feedback" class="invalid-feedback">Please enter a valid price</div>

            <br><br>
        </div>
        <div class="col-md-8">
    
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" id="country" class="form-control" value=<%= list.country %> required>
            <div id="validationServer04Feedback" class="invalid-feedback">Please enter Country name</div>

            <br><br>
        </div>
        </div>
        <div>
    
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" id="location" class="form-control" value=<%= list.location %> required>
            <div id="validationServer04Feedback" class="invalid-feedback">Please enter a valid location</div>

            <br><br>
        </div>
        
    
    
        <div class="container">
            <p class="row1 ">About Image-</p>
            <div class="row">
                <div class="pair1 col-md-4">
                  <label for="filename" class="form-label">Filename</label>
                  <input type="text" name="filename" id="filename" class="form-control" value=<%= list.image.filename %> required>
                  <div id="validationServer04Feedback" class="invalid-feedback">Please enter a valid filename</div>

                </div>
                <div class="pair2 col-md-8">
                  <label for="url" class="form-label">Image url</label>
                  <input type="text" name="url" id="url"  class="form-control" value=<%= list.image.url %> required>
                  <div id="validationServer04Feedback" class="invalid-feedback">Please enter a valid url/link</div>

                </div>
              </div>
    
        </div>
        <br><br>
        
        
    
            <button class="btn btn-custom">Submit</button>
            <br><br>
        </form>
        
        
        
    
    </div>
    </div>
</body>