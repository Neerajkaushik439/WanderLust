<% layout('layouts/boilerplate') -%>
<body>

    <div class="row mt-3">
        <div class="col-5 offset-3" >
            <h3><%= list.title %></h3>
        <img src="<%= list.image.url %>" class="card-img-top show-image" alt="<%= list.image.filename %>">
    </div> 
    <div class="card col-9 offset-3 show-card" >
    
    
    
        <div class="card-body">
          <p class="card-text">
        <ul>
           
            
           <li><%= list.description %></li> 

            
            <li>price:  &#8377 <%= list.price ? list.price.toLocaleString("en-IN") : "N/A" %></li>
            
            <li>Location : <%=list.location %>, <%= list.country %></li>
            
          
        </ul>

        </p>
        
      </div>
    </div>
</div>

    <div class="buttons col-2 offset-3">

    <form action="/listings/<%=list._id%>/edit" method="GET">
        <button class="btn btn-bark pr-3 ">Edit</button>
    </form>
    <br>

    <form action="/listings/<%= list._id %>?_method=DELETE" method="POST">
        <button class="btn btn-bark pr-3 delete-btn">Delete</button>
    </form>

</div>
<hr>
<div class=" col-9 offset-3 mb-3">
    <h3>Leave a Review</h3>
    <form action="/listings/<%= list.id %>/review" method="POST" novalidate class="needs-validation">
        <div class="mt-3 mb-3">
        <label for="rating" class="form-label"> Rating
            <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range" >
        </label>
        </div>
        <div class="mt-3 mb-3"> 
            <label for="comment" class="form-label"> Comment
                
                <textarea name="review[comment]" id="comment" class="form-control mt-3" rows="5" cols="100" required></textarea>
            </label>
        </div>
        <div><button class="btn">Submit</button></div>

        
    </form>
</div>
</div>
   
</body>

