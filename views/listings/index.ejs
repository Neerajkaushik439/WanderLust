<% layout('layouts/boilerplate') -%>
  <style>
    #filters {
      display: flex;
      justify-content: space-around;
    }

    .filter {
      text-align: center;
      margin: 8px;
      opacity: 0.7;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    /* .form-check-reverse{
    padding-left: 5px;
    padding-right: 2px;
    border: 1px solid black;
    border-radius: 10px;
    
  } */
  #switchborder{
    display: flex;
    justify-content: center;
    align-items: center;
    
  
  }
  .tax-info{
    display: none;
    
  }



  
  </style>

  <body>
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Room</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></i></div>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farm</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class=" px-3 border border-dark rounded-5 mt-1 mb-4" id="switchborder">

        <div class="form-check-reverse form-switch ">

          <label class="form-check-label" for="switchCheckDefault" id="switchtext">Display with taxes</label>
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        </div>
      </div>

    </div>

    <% if(alllist.length>0) {%>
    <h3>All listings</h3>
    <% } %>
    <div class="row row-cols-xxl-4 row-cols-lg-3 row-cols-md-2 row-cols-1 g-3">
      <% for(let list of alllist) { %>
        <a href="/listings/<%=list._id%>">
          <div class="card col">
            <img src="<%= list.image.url %>" class="card-img-top " alt="image">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= list.title %>
                </b>
                <br>


                <b>&#8377 <%= list.price ? list.price.toLocaleString("en-IN") : "N/A" %></b> / night
                <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
              </p>

            </div>
          </div>
        </a>
        <% } %>
    </div>



  </body>
  <script>
    let taxswitch = document.getElementById("switchCheckDefault");
    taxswitch.addEventListener("click",()=>{
      let taxInfo= document.getElementsByClassName("tax-info")
      for(info of taxInfo){
        if(info.style.display!="inline"){
          info.style.display="inline"
        }else{
          info.style.display="none"
        }
      }

    })

    function updateTextOnResize() {
    const element = document.getElementById('switchtext');
    if (window.innerWidth < 995) {
      element.innerText = 'Taxes';
    } else {
      element.innerText = 'Display with taxes';
    }
  }

  // Run on page load
  updateTextOnResize();

  // Run whenever window is resized
  window.addEventListener('resize', updateTextOnResize);

  </script>